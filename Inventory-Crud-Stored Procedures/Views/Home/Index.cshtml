@model IEnumerable<Inventory>
@using Inventory_Crud.Models.Pagination;

<style>
    .font {
        font-size: 10px;
    }
</style>
@{


    string GetSortDirection(string column)
    {
        if (ViewBag.sortColumn == column)
        {
            return ViewBag.sortOrder == "desc" ? "asc" : "desc";
        }
        return "desc";
    }
    bool GetArrow(string column)
    {
        if (ViewBag.sortColumn == column)
        {
            return ViewBag.sortOrder == "asc" ? true : false;
        }
        return true;
    }

    Pager pager = new Pager();


    int pageNo = 0;

    if (ViewBag.pager != null)
    {
        pager = ViewBag.pager;
        pageNo = pager.CurrentPage;
    }

}

<h1> @ViewBag.category ?? Inventory </h1>



<table class="table  w-100" style="font-size: 0.75rem;">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@GetSortDirection("Name")" asp-route-sortColumn="Name"
                   asp-route-search="@ViewBag.search" asp-route-category="@ViewBag.category" style="text-decoration:none; color:grey">
                    @Html.DisplayNameFor(model => model.Name)
                    @if (ViewBag.sortColumn == "Name")
                    {
                        @if (@GetArrow("Name"))
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-sort-alpha-up" viewBox="0 0 16 16">
